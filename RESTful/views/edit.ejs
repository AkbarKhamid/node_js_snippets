<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=post.title%></div>  
    <form class="ui form" action="/posts/<%=post._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Edit Title</label>
                <input type="text" name="post[title]" value="<%=post.title%>">
            </div>
            <div class="field">
                <label>Edit Image</label>
                <input type="text" name="post[image]" value="<%=post.image%>">
            </div>
            <div class="field">
                <label>Edit The Content</label>
                <textarea name="post[body]" required><%=post.body%></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
    </form>
</div>