<% include partials/header %>
<div style="text-align: center;margin-top: 50px;">
    <h1>Create a new campground</h1>
    <div class="form-group" style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">    
                <input class="form-control" type="text" name="name" placeholder="campground name">
            </div> 
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder=" image url">
            </div>
            
           <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
     
            <div class="form-group">
                <button class="btn btn-outline-primary btn-sm">Submit</button>
            </div>
        </form>
    </div>    
</div>
    <div style="text-align:center;">    
        <a class="btn btn-link btn-lg" href="/campgrounds">Go back</a>
    </div>
<% include partials/footer %>